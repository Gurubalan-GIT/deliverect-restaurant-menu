{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@components/*": ["./common/components/*"],
      "@context/*": ["./context/*"],
      "@types/*": ["./common/types/*"],
      "@interfaces/*": ["./common/interfaces/*"],
      "@helpers/*": ["./common/component-helpers/*"],
      "@utils/*": ["./common/utils/*"],
      "@layouts/*": ["./layouts/*"],
      "@modules/*": ["./modules/*"],
      "@styles/*": ["./styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
