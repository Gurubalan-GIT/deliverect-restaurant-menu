{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["jest", "node"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "paths": {
      "@components/*": ["./common/components/*"],
      "@assets/*": ["./assets/*"],
      "@zustand/*": ["./zustand/*"],
      "@utils/*": ["./common/utils/*"],
      "@modules/*": ["./modules/*"],
      "@styles/*": ["./styles/*"],
      "@mocks/*": ["./mocks/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
